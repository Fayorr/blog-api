<%- include('partials/header') %>

<div style="max-width: 800px; margin: 0 auto">
	<div class="dash-header">
		<h1>Create New Blog</h1>
		<a
			href="/dashboard"
			class="btn btn-secondary"
			>Cancel</a
		>
	</div>

	<form
		action="/blogs"
		method="POST"
		class="glass-ui"
	>
		<div class="form-group">
			<label for="title">Blog Title</label>
			<input
				type="text"
				id="title"
				name="title"
				placeholder="A catchy title for your story"
				required
			/>
		</div>

		<div class="form-group">
			<label for="description">Short Description</label>
			<textarea
				id="description"
				name="description"
				rows="2"
				placeholder="What is this story about?"
			></textarea>
		</div>

		<div class="form-group">
			<label for="tags">Tags (comma separated)</label>
			<input
				type="text"
				id="tags"
				name="tags"
				placeholder="tech, development, nodejs"
				required
			/>
		</div>

		<div class="form-group">
			<label for="body">Content (Markdown supported)</label>
			<textarea
				id="body"
				name="body"
				rows="12"
				placeholder="Start writing your story here..."
				required
			></textarea>
		</div>

		<div
			style="
				padding: 1.5rem 0 0.5rem;
				border-top: 1px solid var(--border);
				margin-top: 2rem;
			"
		>
			<p
				style="
					color: var(--text-muted);
					font-size: 0.875rem;
					margin-bottom: 1rem;
				"
			>
				ðŸ’¡ Blog will be created in <strong>Draft</strong> state. You can publish
				it anytime from your dashboard.
			</p>
			<button
				type="submit"
				class="btn btn-primary"
				style="width: 100%"
			>
				Create Blog
			</button>
		</div>
	</form>
</div>

<%- include('partials/footer') %>
